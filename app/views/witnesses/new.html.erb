<%= form_with(model: @witness, local: true, html: { multipart: true }) do |form| %>
  <div class="container py-3">
    <h1>Créer un Témoin</h1>
    <div class="form-group">
      <%= form.label :name, "Nom" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :price_per_day, "Tarif par jour" %>
      <%= form.number_field :price_per_day, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :address, "Adresse" %>
      <%= form.text_field :address, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :description, "Description" %>
      <%= form.text_area :description, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :gender, "Genre" %>
      <%= form.select :gender, options_for_select([['Homme', 'Homme'], ['Femme', 'Femme']]), {}, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :photo, "Photo" %>
      <%= form.file_field :photo, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit "Créer", class: "green-btn" %>
    </div>
  </div>
<% end %>
