<div class="dashboard-container d-flex justify-content-center align-items-center">
  <div class="profile-card mr-3">
    <h2 class="username"> Bienvenue <%= current_user.first_name %></h2>
    <% if current_user.avatar.attached? %>
      <%= cl_image_tag current_user.avatar.key, class: "profile-picture" %>
     <% else %>
       <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg" alt="Photo de l'utilisateur" class="profile-picture">
      <% end %>
  </div>


  <div class="profile-list d-flex flex-column">

    <div class= "card-reservation d-flex flex-column">
      <div class="title-container">
        <h4>Mes réservations de témoins</h4>
      </div>
        <div class="temoin-card d-flex flex-column align-items-center">

        <% if @witnesses_reserved_from_me.any? %>

          <% @witnesses_reserved_from_me.each do |booking| %>
            <%= cl_image_tag booking.witness.photo.key, class: "profile-picture" %>
                <h2 class="username"><%= booking.witness.name %></h2>
                <p class="date"> <%= booking.wedding_date.strftime('%B %d, %Y') %></p>
                <p class="date"> <b> <%= booking.booking_status.capitalize %> </b> </p>
                <div class="d-flex justify-content-between-gap-2">
                  <% if booking.booking_status == "pending" %>
                    <button class="green-btn">Annuler la demande</button>
                  <% end %>
                </div>
            <% end %>

        <% else %>
          <p>Vous n'avez pas encore réservé de témoins.</p>
        <% end %>
      </div>
    </div>


    <% unless Witness.where(user: current_user).empty? %>
        <div class= "card-reserved">
          <div class="title-container">
            <h4>Mes témoins réservés</h4>
          </div>
          <div class="temoin-card d-flex flex-column align-items-center">

            <% if @reserved_witnesses.any? %>

              <% @reserved_witnesses.each do |booking| %>
                <%= cl_image_tag booking.witness.photo.key, class: "profile-picture" %>
                  <h2 class="username"><%= booking.witness.name %></h2>
                  <p class="date"> <%= booking.wedding_date.strftime('%B %d, %Y') %></p>
                  <p class="date"> <b> <%= booking.booking_status.capitalize %> </b> </p>
                  <div class="d-flex justify-content-between gap-2">
                  <% if booking.booking_status == "pending" %>
                    <button class="green-btn">Refuser</button>
                    <button class="green-btn">Accepter</button>
                    <% end %>
                  </div>
              <% end %>

            <% else %>
              <p>Aucun de vos témoins n'a encore été réservé.</p>
            <% end %>

          </div>
        </div>
    <% end %>


  </div>
</div>


<div>
  <footer class="footer">
    <div class="footer-content">
      <p>&copy; 2024 Sois mon Témoin.</p>
        <ul class="footer-links">
          <li><a href="#">HOME</a></li>
          <li><a href="#">ABOUT OURS WITNESSES</a></li>
          <li><a href="#">CONTACT US</a></li>
        </ul>
      </div>
    </footer>
</div>
